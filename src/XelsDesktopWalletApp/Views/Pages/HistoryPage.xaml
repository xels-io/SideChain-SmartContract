<Page x:Class="XelsDesktopWalletApp.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XelsDesktopWalletApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="HistoryPage">

    <Border  Background="White"  CornerRadius="8" Margin="10 0 0 10">

        <StackPanel Margin="10 20 5 5">
            <TextBlock Margin="20 0 0 0" FontSize="15" FontWeight="DemiBold" Padding="2" Background="WhiteSmoke">Transaction History</TextBlock>
           
                <Grid >
                <ListView Margin="10,10,10,40" x:Name="HistoryListBinding" VerticalContentAlignment="Top"  
          ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="500"   ScrollViewer.CanContentScroll="False">
                        <ListView.View>
                            <GridView >
                                <GridViewColumn Width="150" 
                                            DisplayMemberBinding="{Binding Path=Type}"  />

                                <GridViewColumn  Width="400" 
                                            DisplayMemberBinding="{Binding Path=Amount}"  />
                                <GridViewColumn  Width="150" 
                                            DisplayMemberBinding="{Binding Path=Timestamp}"  />
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Name="BtnYourButton" Content="Details" Click="DetailsButton_Click" Background="Green" Padding="5" Margin="10 0" />
                                    </DataTemplate>

                                </GridViewColumn.CellTemplate>

                            </GridViewColumn>
                        </GridView>
                        </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>                
            </Grid>
           
            
        </StackPanel>

    </Border>
    
</Page>
